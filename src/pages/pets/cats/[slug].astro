---
import Layout from '../../../layouts/Layout.astro'
import { cats } from '../../../data/cats'
import CatInfo from '../../../components/CatInfo.astro'

export async function getStaticPaths() {
  const paths = cats.map(cat => ({
    params: { slug: cat.slug },
  }))

  return paths
}

const { slug } = Astro.params

const cat = cats.find(pet => pet.slug === slug)
---

<Layout
  title={`Huellitas Felices | ${cat?.nombre || 'Mascota'}`}
  desc={cat?.nombre || 'DescripciÃ³n de la mascota'}
>
  <CatInfo
    cat={cat || undefined}
  />
</Layout>
