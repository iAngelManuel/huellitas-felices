---
import Layout from '../../layouts/Layout.astro'
import Title from '../../components/Title.astro'
import DogsGrid from '../../components/DogsGrid.astro'
---

<Layout
  title="Huellitas Felices | Mascotas"
  desc="Conoce a a los perritos que están en adopción en Huellitas Felices"
>
  <Title text="Listado de Perros" />

  <section class="flex gap-x-5 justify-center">
    <div>
      <p class="text-hf font-extrabold hover:cursor-pointer">Perros</p>
      <div
        transition:name="category-pets"
        class="border-b-2 border-hf hover:cursor-pointer"
      />
    </div>

    <span>/</span>
    <a href="/pets/cats" class="text-hf-1 font-extrabold">Gatos</a>
  </section>

  <DogsGrid />
</Layout>
