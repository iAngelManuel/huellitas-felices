---
import { blogs } from '../data/blogs'
---

<section class="mx-auto max-w-5xl grid grid-cols-2 md:mb-96">
  {
    blogs.map(blog => (
      <a href={blog.slug}>
        <div class="flex gap-2 bg-white shadow-lg rounded-lg p-5 hover:scale-110 transition-all ease-in-out">
            <section class="w-1/2">
              <h2 class="text-2xl font-bold mb-2">{blog.title}</h2>
              <p class="text-gray-600">{blog.subtitle}</p>
            </section>

            <section class="w-1/2">
              <img src={blog.images[0]} alt={blog.title} class="w-full rounded-lg" />
            </section>
        </div>
      </a>
    ))
  }
</section>
